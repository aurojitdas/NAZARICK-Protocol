<Window x:Class="NAZARICK_Protocol.ScanResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="N.A.Z.A.R.I.C.K. Protocol - Scan Results" Height="700" Width="1050"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- Standard Button Style -->
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Small VT Button Style -->
        <Style x:Key="VTButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Title Section -->
        <StackPanel Grid.Row="0" Margin="35,25,35,20">
            <TextBlock Text="Scan Results" FontSize="28" FontWeight="Normal"
                       Foreground="#333333" Margin="0,0,0,5"/>
            <TextBlock x:Name="SummaryText" Text="Loading results..." FontSize="14"
                       Foreground="#666666"/>
        </StackPanel>
        <!-- Summary Cards Section -->
        <Grid Grid.Row="1" Margin="35,0,35,20">
            <Border Background="White" CornerRadius="8" Padding="20"
                    BorderThickness="1" BorderBrush="#E0E0E0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="3"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- Total Files -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalFilesCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#333333" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Files" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <!-- Clean Files -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock x:Name="CleanFilesCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#28a745" HorizontalAlignment="Center"/>
                        <TextBlock Text="Clean" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <!-- Threat Files -->
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock x:Name="ThreatFilesCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#dc3545" HorizontalAlignment="Center"/>
                        <TextBlock Text="Threats" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <!-- YARA Detections -->
                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <TextBlock x:Name="YaraDetectionCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#ff6b35" HorizontalAlignment="Center"/>
                        <TextBlock Text="YARA Detections" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <!-- Hybrid Detections -->
                    <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                        <TextBlock x:Name="HybridDetectionCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#6f42c1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Hybrid Detections" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    <!-- Total Rules Matched -->
                    <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                        <TextBlock x:Name="TotalRulesCount" Text="0" FontSize="24" FontWeight="Bold"
                                   Foreground="#333333" HorizontalAlignment="Center"/>
                        <TextBlock Text="Total Rules Matched" FontSize="12" Foreground="#666666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <!-- Results Table Section -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Margin="35,0,35,20"
                BorderThickness="1" BorderBrush="#E0E0E0">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Table Header -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0"
                        BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="File Path" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="15,0,0,0" FontSize="13"/>
                        <TextBlock Grid.Column="1" Text="Status" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13"/>
                        <TextBlock Grid.Column="2" Text="Rules Matched" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13"/>
                        <TextBlock Grid.Column="3" Text="Detected Threats" FontWeight="SemiBold"
                                   VerticalAlignment="Center" Margin="15,0,0,0" FontSize="13"/>
                        <TextBlock Grid.Column="4" Text="Results" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13"/>
                        <TextBlock Grid.Column="5" Text="VirusTotal Actions" FontWeight="SemiBold"
                                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="13"/>
                    </Grid>
                </Border>
                <!-- Table Content -->
                <Border Grid.Row="1">
                    <ListView x:Name="ResultsListView" 
                              BorderThickness="0" 
                              Background="Transparent"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.IsContainerVirtualizable="True"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel IsVirtualizing="True" 
                                                       VirtualizationMode="Recycling"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="#F0F0F0" BorderThickness="0,0,0,1"
                                                    Padding="0,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="300"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="130"/>
                                                        <ColumnDefinition Width="140"/>
                                                        <ColumnDefinition Width="200"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding FilePath}"
                                                               VerticalAlignment="Center" Margin="15,0,10,0"
                                                               TextTrimming="CharacterEllipsis" FontSize="13"
                                                               ToolTip="{Binding FilePath}"/>
                                                    <Border Grid.Column="1" Background="{Binding StatusBackground}"
                                                            CornerRadius="12" Height="24" Width="60"
                                                            HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding StatusText}"
                                                                   Foreground="{Binding StatusForeground}"
                                                                   FontSize="10" FontWeight="SemiBold"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"/>
                                                    </Border>
                                                    <TextBlock Grid.Column="2" Text="{Binding MatchedRulesCount}"
                                                               VerticalAlignment="Center" FontSize="13"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Grid.Column="3" Text="{Binding ThreatsList}"
                                                               VerticalAlignment="Center" Margin="15,0,10,0"
                                                               TextWrapping="Wrap" FontSize="13"
                                                               ToolTip="{Binding ThreatsList}"/>
                                                    <!-- Results Column -->
                                                    <StackPanel Grid.Column="4" Orientation="Horizontal"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Button Content="View Results" Width="90" Height="28"
                                                                Background="#28a745" Foreground="White"
                                                                BorderThickness="0" FontSize="10"
                                                                Style="{StaticResource VTButtonStyle}"
                                                                Click="ViewResults_Click"
                                                                Tag="{Binding FilePath}"
                                                                ToolTip="View detailed scan results"/>
                                                    </StackPanel>
                                                    <!-- VirusTotal Actions Column -->
                                                    <StackPanel Grid.Column="5" Orientation="Horizontal"
                                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Button Content="Send Hash" Width="90" Height="28"
                                                                Background="#FF6B35" Foreground="White"
                                                                BorderThickness="0" FontSize="10"
                                                                Style="{StaticResource VTButtonStyle}"
                                                                Margin="2,0"
                                                                Click="SendHashToVT_Click"
                                                                Tag="{Binding FilePath}"
                                                                ToolTip="Send file hash to VirusTotal"/>
                                                        <Button Content="Send File" Width="90" Height="28"
                                                                Background="#0078D4" Foreground="White"
                                                                BorderThickness="0" FontSize="10"
                                                                Style="{StaticResource VTButtonStyle}"
                                                                Margin="2,0"
                                                                Click="SendFileToVT_Click"
                                                                Tag="{Binding FilePath}"
                                                                ToolTip="Send file to VirusTotal"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#F8F9FA"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Border>
            </Grid>
        </Border>
        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="35,15">
                <Button x:Name="BackButton" Content="Back" Width="100" Height="35"
                        Background="#6c757d" Foreground="White" BorderThickness="0"
                        Style="{StaticResource StandardButtonStyle}" Margin="0,0,10,0"
                        Click="BackButton_Click"/>
                <Button x:Name="CloseButton" Content="Close" Width="100" Height="35"
                        Background="#0078D4" Foreground="White" BorderThickness="0"
                        Style="{StaticResource StandardButtonStyle}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>