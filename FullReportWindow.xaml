<Window x:Class="NAZARICK_Protocol.FullReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comprehensive Analysis Report - NAZARICK Protocol" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>

        <!-- Subheader Style -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="Foreground" Value="#34495E"/>
        </Style>

        <!-- Content Style -->
        <Style x:Key="ContentStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Foreground" Value="#5D6D7E"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Threat Level Styles -->
        <Style x:Key="CleanStyle" TargetType="TextBlock" BasedOn="{StaticResource ContentStyle}">
            <Setter Property="Foreground" Value="#27AE60"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="LowStyle" TargetType="TextBlock" BasedOn="{StaticResource ContentStyle}">
            <Setter Property="Foreground" Value="#F39C12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="MediumStyle" TargetType="TextBlock" BasedOn="{StaticResource ContentStyle}">
            <Setter Property="Foreground" Value="#E67E22"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="HighStyle" TargetType="TextBlock" BasedOn="{StaticResource ContentStyle}">
            <Setter Property="Foreground" Value="#E74C3C"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="CriticalStyle" TargetType="TextBlock" BasedOn="{StaticResource ContentStyle}">
            <Setter Property="Foreground" Value="#C0392B"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1F618D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Export Button Style -->
        <Style x:Key="ExportButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#2ECC71"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#27AE60"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#95A5A6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7F8C8D"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#6C7B7D"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="FileNameHeader" 
                               Text="Comprehensive Analysis Report" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="FilePathHeader" 
                               Text="File Path: Loading..." 
                               FontSize="12" 
                               Foreground="#BDC3C7" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="AnalysisTimeText" 
                               Text="Analysis Time: Loading..." 
                               FontSize="12" 
                               Foreground="#BDC3C7" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>

                <!-- Summary Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📊 Executive Summary" Style="{StaticResource HeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Overall Threat Level" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="OverallThreatLevelText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Score" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="TotalScoreText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="File Size" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="FileSizeText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- YARA Analysis Results -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🔍 YARA Pattern Analysis" Style="{StaticResource HeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Detection Status" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="YaraStatusText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Rules Matched" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="YaraRulesCountText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Detected Threats" Style="{StaticResource SubHeaderStyle}"/>
                                <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="YaraThreatsText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- PE Analysis Results -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="⚙️ Portable Executable Analysis" Style="{StaticResource HeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="PE Validity" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeValidityText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="PE Threat Level" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeThreatLevelText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="PE Score" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeScoreText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Digital Signature" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeSignatureText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Suspicious Imports" Style="{StaticResource SubHeaderStyle}"/>
                                <ScrollViewer MaxHeight="80" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="PeSuspiciousImportsText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>

                        <!-- PE Detailed Findings -->
                        <Expander Header="🔍 Detailed PE Findings" Margin="0,10,0,0" IsExpanded="False">
                            <StackPanel Margin="10">
                                <TextBlock Text="Section Anomalies" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeSectionAnomaliesText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Import Combinations" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeImportCombinationsText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Entry Point Info" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeEntryPointText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Metadata Anomalies" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="PeMetadataText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </Border>

                <!-- Hybrid Analysis Results -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="🧬 Hybrid Analysis Results" Style="{StaticResource HeaderStyle}"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Final Verdict" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="HybridFinalVerdictText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Confidence Level" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="HybridConfidenceText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Entropy Analysis" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="HybridEntropyText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Size Analysis" Style="{StaticResource SubHeaderStyle}"/>
                                <TextBlock x:Name="HybridSizeAnalysisText" Text="Loading..." Style="{StaticResource ContentStyle}"/>

                                <TextBlock Text="Cross-Analysis Findings" Style="{StaticResource SubHeaderStyle}"/>
                                <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="HybridCrossAnalysisText" Text="Loading..." Style="{StaticResource ContentStyle}"/>
                                </ScrollViewer>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="📄 Export Report" Style="{StaticResource ExportButtonStyle}" Click="ExportReport_Click"/>
                    <Button Content="📋 Copy to Clipboard" Style="{StaticResource ModernButtonStyle}" Click="CopyToClipboard_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Close" Style="{StaticResource CloseButtonStyle}" Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>