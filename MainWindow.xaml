<Window x:Class="NAZARICK_Protocol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="N.A.Z.A.R.I.C.K. Protocol" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" 
                                Background="Transparent" 
                                Padding="20,12" 
                                Margin="8,2"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" 
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="AccentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="Consolas, Monaco, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C2C2C" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" Margin="20,0,20,30">
                    <TextBlock Text="🛡️" FontSize="24" VerticalAlignment="Center"/>
                    <TextBlock Text="N.A.Z.A.R.I.K." FontSize="16" FontWeight="SemiBold" 
                               Margin="10,0,0,0" VerticalAlignment="Center" Foreground="White"/>
                </StackPanel>

                <RadioButton x:Name="HomeTab" Content="🏠 Home" IsChecked="True" 
                             Style="{StaticResource NavigationButtonStyle}"
                             Checked="NavigationTab_Checked" Tag="Home" Foreground="White"/>
                <RadioButton x:Name="ScanTab" Content="🔍 Scan" 
                             Style="{StaticResource NavigationButtonStyle}"
                             Checked="NavigationTab_Checked" Tag="Scan" Foreground="White"/>
                <RadioButton x:Name="SettingsTab" Content="⚙️ Settings" 
                             Style="{StaticResource NavigationButtonStyle}"
                             Checked="NavigationTab_Checked" Tag="Settings" Foreground="White"/>
                <RadioButton x:Name="InfoTab" Content="📊 Info" 
                             Style="{StaticResource NavigationButtonStyle}"
                             Checked="NavigationTab_Checked" Tag="Info" Foreground="White"/>
                <RadioButton x:Name="AboutTab" Content="ℹ️ About" 
                             Style="{StaticResource NavigationButtonStyle}"
                             Checked="NavigationTab_Checked" Tag="About" Foreground="White"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#F5F5F5">
            <Grid x:Name="ContentArea">

                <Grid x:Name="HomePage" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="40,30,40,20">
                        <TextBlock Text="System Protection" FontSize="28" FontWeight="Bold" Foreground="#333333"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Ellipse x:Name="SystemStatusIndicator" Fill="#00FF00" Style="{StaticResource StatusIndicatorStyle}"/>
                            <TextBlock x:Name="SystemStatusText" Text="System Protected - All services running" FontSize="14" 
                                       Foreground="#666666" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="40,0,40,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Last Scan" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                                <TextBlock x:Name="LastScanText" Text="Never" FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                                <TextBlock x:Name="LastScanResultText" Text="No threats found" FontSize="12" Foreground="#00AA00" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                            <StackPanel>
                                <TextBlock Text="Threats Detected" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                                <TextBlock x:Name="ThreatsDetectedText" Text="0" FontSize="20" FontWeight="Bold" Foreground="#FF0000" Margin="0,5,0,0"/>
                                <TextBlock Text="Total quarantined" FontSize="12" Foreground="#666666"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="YARA Rules" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                                <TextBlock x:Name="YaraRulesCountText" Text="Loading..." FontSize="12" Foreground="#666666" Margin="0,5,0,0"/>
                                <TextBlock x:Name="YaraRulesStatusText" Text="Initializing..." FontSize="12" Foreground="#0078D4" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="MainScanButton" Width="200" Height="200" 
                                Background="#0078D4" BorderThickness="0"
                                Click="MainScanButton_Click" Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="100">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="🛡️" FontSize="48" HorizontalAlignment="Center"/>
                                            <TextBlock Text="SCAN NOW" FontSize="16" FontWeight="Bold" 
                                                       Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#106EBE"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#005A9E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Text="Click to start a quick scan" FontSize="12" 
                                   HorizontalAlignment="Center" Margin="0,15,0,0"
                                   Foreground="#666666"/>
                    </StackPanel>
                    <Border Grid.Row="3" Margin="40,20,40,40" Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="Scan Information" FontSize="16" FontWeight="SemiBold" 
                                       Margin="0,0,0,10" Foreground="#333333"/>
                            <TextBox x:Name="ScanInfoTextBox" 
                                     Text="System ready for scanning. Last scan: Never"
                                     IsReadOnly="True" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="60"
                                     VerticalScrollBarVisibility="Auto"
                                     Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid x:Name="ScanPage" Visibility="Collapsed">
                    <StackPanel Margin="40,30,40,40">
                        <TextBlock Text="Scan Options" FontSize="28" FontWeight="Bold" 
                                   Margin="0,0,0,30" Foreground="#333333"/>

                        <StackPanel>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Quick Scan" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Scans the most common areas where malware is found" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>

                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Start Quick Scan" Width="150" HorizontalAlignment="Left"
                                                Style="{StaticResource AccentButtonStyle}" Click="MainScanButton_Click"/>

                                        <Button Content="Scan Folder" Width="150" HorizontalAlignment="Left" Margin="10,0,0,0"
                                                Style="{StaticResource AccentButtonStyle}" Click="ScanFolderButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Full System Scan" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Comprehensive scan of your entire system" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>
                                    <Button Content="Start Full Scan" Width="150" HorizontalAlignment="Left"
                                            Background="#666666" Foreground="White" BorderThickness="0"
                                            Padding="16,8" Cursor="Hand"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Custom Scan" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Choose specific folders and files to scan" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Choose Location" Width="150" Margin="0,0,10,0"
                                                Background="#666666" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                        <Button x:Name="ChangeRulesButton" Content="Change Rules" Width="150"
                                                Click="ChangeRulesButton_Click"
                                                Background="#666666" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <Grid x:Name="SettingsPage" Visibility="Collapsed">
                    <StackPanel Margin="40,30,40,40">
                        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" 
                                   Margin="0,0,0,30" Foreground="#333333"/>
                        <StackPanel>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Real-time Protection" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Enable automatic scanning and configure a folder to monitor for changes." 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666" TextWrapping="Wrap"/>

                                    <CheckBox Content="Enable real-time protection" IsChecked="True" 
                                              Foreground="#333333" FontSize="14" Margin="0,0,0,20"/>

                                    <TextBlock Text="Monitored Path:" FontSize="12" FontWeight="Normal" Foreground="#444444"/>
                                    <TextBlock x:Name="CurrentMonitoringPathText" Text="Not configured" FontSize="12" FontFamily="Consolas, Monaco, monospace" Foreground="#0078D4" Margin="0,2,0,15" TextWrapping="Wrap"/>
                                    <Button x:Name="ChangeMonitoringPathButton" Content="Change Path" Width="150" HorizontalAlignment="Left"
                                            Style="{StaticResource AccentButtonStyle}" Click="ChangeMonitoringPathButton_Click"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="YARA Rules Configuration" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Configure YARA rules for malware detection" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Update Rules" Width="120" Margin="0,0,10,0"
                                                Style="{StaticResource AccentButtonStyle}"/>
                                        <Button Content="Import Rules" Width="120" Margin="0,0,10,0"
                                                Background="#666666" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                        <Button Content="Export Rules" Width="120"
                                                Background="#666666" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Scheduled Scans" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Automatically run scans at specified times" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>
                                    <CheckBox Content="Enable scheduled scans" Foreground="#333333" FontSize="14"/>
                                    <StackPanel Margin="0,10,0,0">
                                        <TextBlock Text="Frequency:" FontSize="14" Foreground="#333333" Margin="0,0,0,5"/>
                                        <ComboBox Width="200" HorizontalAlignment="Left" SelectedIndex="1">
                                            <ComboBoxItem Content="Daily"/>
                                            <ComboBoxItem Content="Weekly"/>
                                            <ComboBoxItem Content="Monthly"/>
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Quarantine" FontSize="18" FontWeight="SemiBold" Foreground="#333333"/>
                                    <TextBlock Text="Manage quarantined files" 
                                               FontSize="14" Margin="0,5,0,15" Foreground="#666666"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="View Quarantine" Width="150" Margin="0,0,10,0"
                                                Background="#666666" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                        <Button Content="Clear Quarantine" Width="150"
                                                Background="#CC0000" Foreground="White" BorderThickness="0"
                                                Padding="16,8" Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid x:Name="InfoPage" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="White" Margin="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#2C2C2C" Padding="15,10">
                                <StackPanel>
                                    <TextBlock Text="System Logs" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">

                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            <TextBox x:Name="LogsTextBox" Grid.Row="1" 
                                     Style="{StaticResource LogTextBoxStyle}"
                                     Text="[INFO] N.A.Z.A.R.I.C.K. Protocol&#x0A;"
                                     Margin="0"
                                     MinHeight="550"
                                     MaxHeight="550"
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                    </Border>
                    <Border Grid.Column="1" Background="White" Margin="0,20,20,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="#F0F0F0" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                                <TextBlock Text="System Information" FontSize="14" FontWeight="SemiBold" Foreground="#333333"/>
                            </Border>
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="15,10">
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="CPU Usage" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                        <ProgressBar x:Name="CpuUsageBar" Height="15" Margin="0,2,0,0" 
                                                     Background="#E0E0E0" Foreground="#0078D4" Value="25"/>
                                        <TextBlock x:Name="CpuUsageText" Text="25%" FontSize="10" Foreground="#666666" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Memory Usage" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                        <ProgressBar x:Name="MemoryUsageBar" Height="15" Margin="0,2,0,0" 
                                                     Background="#E0E0E0" Foreground="#FF6B00" Value="60"/>
                                        <TextBlock x:Name="MemoryUsageText" Text="60%" FontSize="10" Foreground="#666666" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Files Scanned Today" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                        <TextBlock x:Name="FilesScannedText" Text="0" FontSize="16" FontWeight="Bold" Foreground="#0078D4"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Threats Blocked Today" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                        <TextBlock x:Name="ThreatsBlockedText" Text="0" FontSize="16" FontWeight="Bold" Foreground="#FF0000"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,15">
                                        <TextBlock Text="Last Rules Update" FontSize="12" FontWeight="SemiBold" Foreground="#333333"/>
                                        <TextBlock x:Name="LastUpdateText" Text="Never" FontSize="10" Foreground="#666666"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
                <Grid x:Name="AboutPage" Visibility="Collapsed">
                    <StackPanel Margin="40,30,40,40" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🛡️" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        <TextBlock Text="N.A.Z.A.R.I.C.K." FontSize="24" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#333333"/>
                        <TextBlock Text="Version 1.0.0" FontSize="16" 
                                   HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#666666"/>
                        <Border Style="{StaticResource CardStyle}" MaxWidth="500">
                            <StackPanel>
                                <TextBlock Text="About N.A.Z.A.R.I.C.K. Protocol" FontSize="18" FontWeight="SemiBold" 
                                           HorizontalAlignment="Center" Foreground="#333333" Margin="0,0,0,15"/>
                                <TextBlock Text="Nefarious Anomaly Zone And Rogue Infection-analysis Countermeasure Kit Protocol. A comprehensive antivirus solution designed to protect your computer from malware, viruses, and other security threats using advanced YARA rule-based detection."
                                           TextWrapping="Wrap" TextAlignment="Center" FontSize="14"
                                           Foreground="#666666" Margin="0,0,0,20"/>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="Features:" FontWeight="SemiBold" HorizontalAlignment="Center" 
                                               Foreground="#333333" Margin="0,0,0,10"/>
                                    <TextBlock Text="• YARA rule-based malware detection" HorizontalAlignment="Center" Foreground="#666666"/>
                                    <TextBlock Text="• Real-time protection" HorizontalAlignment="Center" Foreground="#666666"/>
                                    <TextBlock Text="• Comprehensive logging system" HorizontalAlignment="Center" Foreground="#666666"/>
                                    <TextBlock Text="• Custom scan configurations" HorizontalAlignment="Center" Foreground="#666666"/>
                                    <TextBlock Text="• Quarantine management" HorizontalAlignment="Center" Foreground="#666666"/>
                                </StackPanel>

                                <Button Content="Check for Updates" HorizontalAlignment="Center" 
                                        Style="{StaticResource AccentButtonStyle}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</Window>